# top-most EditorConfig file
root = true

# All files
[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true

# JavaScript files
[*.js]
max_line_length = 120

# HTML files
[*.html]
indent_size = 4

# CSS files
[*.css]
indent_size = 4
